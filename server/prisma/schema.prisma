generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  ADMIN
  FACILITY
  PROVIDER
  LAB
}

model Facility {
  id          String     @id @default(uuid())
  name        String
  email       String     @unique

  providers   Provider[]
  users       User[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([name])
}

model Provider {
  id          String     @id @default(uuid())
  name        String
  npi         String?    @unique

  facilityId  String
  facility    Facility  @relation(fields: [facilityId], references: [id])

  users       User[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([facilityId])
}

model Lab {
  id          String     @id @default(uuid())
  name        String
  code        String?    @unique

  users       User[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}


model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String

  name   String

  role        UserRole

  facilityId  String?
  facility    Facility? @relation(fields: [facilityId], references: [id])

  providerId  String?
  provider    Provider? @relation(fields: [providerId], references: [id])

  labId       String?
  lab         Lab?      @relation(fields: [labId], references: [id])
  practiceConnections PracticeConnection[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([role])
  @@index([facilityId])
  @@index([providerId])
  @@index([labId])
}

model PracticeConnection {
  id         Int      @id @default(autoincrement())
  practiceId String   @unique
  userId     String
  token      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}