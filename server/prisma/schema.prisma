generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  ADMIN
  FACILITY
  PROVIDER
  LAB
}

model Facility {
  id          String     @id @default(uuid())
  name        String
  email       String     @unique

  providers   Provider[]
  users       User[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  patients Patient[]

  @@index([name])
}

model Provider {
  id          String     @id @default(uuid())
  name        String
  npi         String?    @unique

  facilityId  String
  facility    Facility  @relation(fields: [facilityId], references: [id])
  patients Patient[]

  users       User[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([facilityId])
}

model Lab {
  id          String     @id @default(uuid())
  name        String
  code        String?    @unique

  users       User[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}


model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String

  name   String

  role        UserRole

  facilityId  String?
  facility    Facility? @relation(fields: [facilityId], references: [id])

  providerId  String?
  provider    Provider? @relation(fields: [providerId], references: [id])

  labId       String?
  lab         Lab?      @relation(fields: [labId], references: [id])
  practiceConnections PracticeConnection[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([role])
  @@index([facilityId])
  @@index([providerId])
  @@index([labId])
}

model PracticeConnection {
  id         Int      @id @default(autoincrement())
  practiceId String   @unique
  userId     String
  token      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}


model Patient {
  id           String       @id @default(uuid())
  firstName    String
  lastName     String
  mrn          String       @unique     
  dateOfBirth  DateTime
  gender       Gender
  phone        String?
  email        String?

  facilityId   String? 
  facility     Facility?   @relation(fields: [facilityId], references: [id])
  
  providerId   String? 
  provider     Provider?   @relation(fields: [providerId], references: [id])
  
  insurance    Insurance?
  diagnoses    Diagnosis[]
 

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([mrn])
  @@index([lastName, firstName])
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Insurance {
  id         String   @id @default(uuid())
  patientId  String   @unique
  provider   String
  plan       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  patient    Patient  @relation(fields: [patientId], references: [id])
}


model Diagnosis {
  id          String   @id @default(uuid())
  patientId   String
  name        String
  icd10       String
  onsetDate   DateTime

  patient     Patient @relation(fields: [patientId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([patientId])
  @@index([icd10])
}
