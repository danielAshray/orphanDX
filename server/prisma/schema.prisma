generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  ADMIN
  USER
  SERVICE_ACCOUNT
}

enum OrganizationRole {
  LAB
  FACILITY
}

model Organization {
  id          String     @id @default(uuid())
  name String
  role OrganizationRole
  users User[]
  patients Patient[]
  labRules LabRule[]
  labOrders LabOrder[] @relation("LabOrders")
  facilityOrders LabOrder[] @relation("FacilityOrders")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}


model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String
  name   String
  role        UserRole
  organizationId String?
  organization Organization? @relation(fields: [organizationId],references: [id])

 
  practiceConnections PracticeConnection[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([organizationId])
}

model LabRule {
  id          String     @id @default(uuid())
  labId       String
  lab         Organization @relation(fields: [labId], references: [id])
  code        String
  message     String

  labRecommendations LabRecommendation[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([labId, code])
  @@index([labId])
}

model PracticeConnection {
  id         Int      @id @default(autoincrement())
  practiceId String   @unique
  userId     String
  token      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}


model Patient {
  id           String       @id @default(uuid())
  firstName    String
  lastName     String
  mrn          String       @unique     
  dateOfBirth  DateTime
  gender       Gender
  phone        String?
  email        String?

  insurance    Insurance?
  diagnoses    Diagnosis[]
  labRecommendations LabRecommendation[]
  labOrder LabOrder[]

  facilityId     String
  facility       Organization @relation(fields: [facilityId], references: [id])
 

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([facilityId])
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Insurance {
  id         String   @id @default(uuid())
  patientId  String   @unique
  provider   String
  plan       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  patient    Patient  @relation(fields: [patientId], references: [id])
}


model Diagnosis {
  id          String   @id @default(uuid())
  patientId   String
  name        String
  icd10       String
  onsetDate   DateTime

  patient     Patient @relation(fields: [patientId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  labRecommendations LabRecommendation[]
  labOrders LabOrder[]
  
  @@index([patientId])
  @@index([icd10])
}

enum RecommendationStatus {
  PENDING
  ACCEPTED
  DISMISSED
  ORDERED
}

model LabRecommendation {
  id           String   @id @default(uuid())
  patientId    String
  title        String        
  reason       String        
  status       RecommendationStatus @default(PENDING)
  patient      Patient   @relation(fields: [patientId], references: [id])
  labRuleId String
  labRule LabRule @relation(fields: [labRuleId],references: [id])
  diagnosisId String
  diagnosis    Diagnosis @relation(fields: [diagnosisId], references: [id])

  labOrder     LabOrder?              @relation("LabOrderRecommendation") 

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
 

  @@index([patientId])
  @@unique([patientId, diagnosisId, labRuleId])
}


enum LabOrderStatus {
  PENDING
  COMPLETED
  CANCELLED
  FAILED
}

model LabOrder {
  id            String      @id @default(uuid())
  facility      Organization @relation("FacilityOrders", fields: [facilityId], references: [id])
  facilityId    String
  lab           Organization @relation("LabOrders", fields: [labId], references: [id])
  labId         String
  patient       Patient     @relation(fields: [patientId], references: [id])
  patientId     String
  diagnosis     Diagnosis   @relation(fields: [diagnosisId], references: [id])
  diagnosisId   String
  recommendationId String? @unique                
  recommendation   LabRecommendation?    @relation("LabOrderRecommendation", fields: [recommendationId], references: [id])

  status        LabOrderStatus     @default(PENDING)
  results       String?
  orderedAt     DateTime    @default(now())
  completedAt   DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

@@index([facilityId])
@@index([labId])
@@index([diagnosisId])
@@index([recommendationId])

}
