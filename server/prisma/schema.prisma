generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  ADMIN
  USER
  SERVICE_ACCOUNT
}

enum OrganizationRole {
  LAB
  FACILITY
}

model Organization {
  id          String     @id @default(uuid())
  name String
  phone String
  city      String 
  state     String
  zipCode   String
  suite String
  street String
  role OrganizationRole
  users User[]
  patients Patient[]
  labRules LabRule[]
  labOrders LabOrder[] @relation("LabOrders")
  facilityOrders LabOrder[] @relation("FacilityOrders")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}


model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String
  name   String
  role        UserRole
  organizationId String?
  organization Organization? @relation(fields: [organizationId],references: [id])
  labOrders LabOrder[]
 
  practiceConnections PracticeConnection[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([organizationId])
}

model LabRule {
  id          String     @id @default(uuid())
  testName String 
  cptCode String 
  labId       String
  lab         Organization @relation(fields: [labId], references: [id])
  code        String
  message     String
  priority Priority @default(LOW)

  labRecommendations LabRecommendation[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([labId, code])
  @@index([labId])
}

model PracticeConnection {
  id         Int      @id @default(autoincrement())
  practiceId String   @unique
  userId     String
  token      String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}


model Patient {
  id           String       @id @default(uuid())
  firstName    String
  lastName     String
  mrn          String       @unique     
  dateOfBirth  String
  gender       Gender
  phone        String?
  email        String?
  lastVisit DateTime
  scheduledCount Int @default(0)
  recomendationCount Int @default(0)
  resultCount Int @default(0)
  completedCount Int @default(0)

  insurance    Insurance?
  diagnosis    Diagnosis[]
  labRecommendations LabRecommendation[]
  labOrder LabOrder[]

  facilityId     String
  facility       Organization @relation(fields: [facilityId], references: [id])
 

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([facilityId])
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Insurance {
  id         String   @id @default(uuid())
  patientId  String   @unique
  provider   String
  plan       String
  memberId String 
  type       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  patient    Patient  @relation(fields: [patientId], references: [id])
}


model Diagnosis {
  id          String   @id @default(uuid())
  patientId   String
  name        String
  icd10       String
  onsetDate   DateTime

  patient     Patient @relation(fields: [patientId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  labRecommendations LabRecommendation[]
  labOrderLinks     LabOrderDiagnosis[]
  
  
  @@index([patientId])
  @@index([icd10])
}

enum RecommendationStatus {
  PENDING
  DISMISSED
  ORDERED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

model LabRecommendation {
  id           String   @id @default(uuid())
  testName String 
  cptCode String 
  priority Priority
  patientId    String       
  reason       String        
  status       RecommendationStatus @default(PENDING)
  patient      Patient   @relation(fields: [patientId], references: [id])
  labRuleId String
  labRule LabRule @relation(fields: [labRuleId],references: [id])
  diagnosisId String
  diagnosis    Diagnosis @relation(fields: [diagnosisId], references: [id])

  labOrderRecommendations  LabOrderRecommendation[]

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
 
  @@unique([diagnosisId, labRuleId])
}


enum LabOrderStatus {
  ORDERED
  COLLECTED
  COMPLETED
  CANCELLED
}

model LabOrderDiagnosis {
  id          String   @id @default(uuid())
  labOrderId  String
  diagnosisId String

  labOrder    LabOrder  @relation(fields: [labOrderId], references: [id])
  diagnosis   Diagnosis @relation(fields: [diagnosisId], references: [id])

  @@unique([labOrderId, diagnosisId])
  @@index([diagnosisId])
}

model LabOrderRecommendation {
  id                 String   @id @default(uuid())
  labOrderId         String
  labRecommendationId String

  labOrder           LabOrder           @relation(fields: [labOrderId], references: [id])
  labRecommendation  LabRecommendation  @relation(fields: [labRecommendationId], references: [id])

  @@unique([labOrderId, labRecommendationId])
  @@index([labRecommendationId])
}


model LabOrder {
  id            String      @id @default(uuid())
  testName String 
  cptCode String 
  facility      Organization @relation("FacilityOrders", fields: [facilityId], references: [id])
  facilityId    String
  lab           Organization @relation("LabOrders", fields: [labId], references: [id])
  labId         String
  patient       Patient     @relation(fields: [patientId], references: [id])
  patientId     String

  diagnosis        LabOrderDiagnosis[]
  recommendations  LabOrderRecommendation[]

  status        LabOrderStatus     @default(ORDERED)
  orderedAt     DateTime    @default(now())
  completedAt   DateTime?
  collectedAt DateTime?

  createdBy       User        @relation(fields: [createdById], references: [id])
  createdById     String

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  testResult TestResult?

  @@index([facilityId,patientId])
  @@index([labId,patientId])
}


model TestResult {
   id            String      @id @default(uuid())
  isNormal Boolean @default(true)
  labOrder      LabOrder @relation( fields: [labOrderId], references: [id])
  labOrderId    String @unique
  recomendations Json[]
  result Json[]
  summary String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
